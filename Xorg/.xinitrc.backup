#!/bin/sh
#
# ~/.xinitrc
#
# Executed by startx (run your window manager from here)

if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

# nvidia-settings --load-config-only
# exec startxfce4
numlockx &  # Execute numlockx to activate numlock
xrdb ~/.Xresources &  # Load the .Xresources file (for urxvt)
xset r rate 200 30 &  # Set the keyboard rate (delay and speed)
exec i3