" Normal mode
map [normal] T scroll full-down
map [normal] S scroll full-up
map [normal] c scroll left
map [normal] t scroll down
map [normal] s scroll up
map [normal] r scroll right
map [normal] <C-i> scroll half-down
map [normal] <C-v> scroll half-up
map [normal] ,, goto top
map [normal] ; goto bottom
map [normal] C scroll page-top
map [normal] R scroll page-bottom
map [normal] u adjust_window width
map [normal] f focus_inputbar /
map [normal] F focus_inputbar ?
map [normal] \' search forward
map [normal] ? search backward
map [normal] l focus_inputbar :open
map [normal] e follow
map [normal] E display_link
map [normal] N focus_inputbar :
map [normal] o rotate rotate_cw
map [normal] <C-l> reload
map [normal] i toggle_page_mode
map [normal] <C-q> toggle_inputbar
map [normal] <C-\'> toggle_statusbar
unmap [normal] q
map [normal] b quit
map [normal] q mark_add
map [normal] m mark_evaluate

